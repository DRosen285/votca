from votca/buildenv:latest

ARG TRAVIS
ARG TRAVIS_PULL_REQUEST
ARG TRAVIS_REPO_SLUG
ARG TRAVIS_BRANCH
ARG TRAVIS_COMMIT

RUN git clone --recursive -b "${TRAVIS_BRANCH}" https://github.com/"${TRAVIS_REPO_SLUG}" votca
WORKDIR votca
RUN if [ ${TRAVIS} = true ]; then \
      if [ ${TRAVIS_PULL_REQUEST} != false ]; then \
        git fetch "git://github.com/${TRAVIS_REPO_SLUG}" +refs/pull/"${TRAVIS_PULL_REQUEST}"/merge: ;\
        git checkout FETCH_HEAD; \
      else \
        git fetch --depth=10 "git://github.com/${TRAVIS_REPO_SLUG}" "${TRAVIS_BRANCH}"; \
        git checkout "${TRAVIS_COMMIT}"; \
      fi; \
      git submodule update; \
fi
RUN mkdir build
WORKDIR build
RUN cmake -DBUILD_CSGAPPS=ON -DBUILD_XTP=ON -DCMAKE_INSTALL_PREFIX=/usr -DLIB=lib64 ..
RUN make VERBOSE=1 -j2
RUN make install DESTDIR=${PWD}
USER root
RUN make install
USER votca
WORKDIR ../csg-tutorials
