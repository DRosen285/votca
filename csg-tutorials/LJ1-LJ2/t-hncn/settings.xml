<cg>
  <non-bonded>
    <name>LJ1-LJ1</name>
    <type1>LJ1</type1>
    <type2>LJ1</type2>
    <min>0.0</min>
    <max>0.85</max>
    <step>0.002</step>
    <inverse>
      <target>LJ1-LJ1.dist.tgt</target>
      <target_intra>LJ1-LJ1.dist-intra.tgt</target_intra>
      <do_potential>1</do_potential>
      <post_update />
      <post_add />
      <gromacs>
        <table>table_LJ1_LJ1.xvg</table>
      </gromacs>
      <post_add />
    </inverse>
    <improve_dist_near_core>
      <target>true</target>
      <new>true</new>
      <function>exponential</function>
      <fit_start_g>1e-05</fit_start_g>
      <fit_end_g>0.2</fit_end_g>
    </improve_dist_near_core>
  </non-bonded>

  <non-bonded>
    <name>LJ1-LJ2</name>
    <type1>LJ1</type1>
    <type2>LJ2</type2>
    <min>0.0</min>
    <max>0.85</max>
    <step>0.002</step>
    <inverse>
      <target>LJ1-LJ2.dist.tgt</target>
      <target_intra>LJ1-LJ2.dist-intra.tgt</target_intra>
      <do_potential>1</do_potential>
      <post_update />
      <post_add />
      <gromacs>
        <table>table_LJ1_LJ2.xvg</table>
      </gromacs>
      <post_add />
    </inverse>
    <improve_dist_near_core>
      <target>true</target>
      <new>true</new>
      <function>exponential</function>
      <fit_start_g>1e-05</fit_start_g>
      <fit_end_g>0.2</fit_end_g>
    </improve_dist_near_core>
  </non-bonded>

  <non-bonded>
    <name>LJ2-LJ2</name>
    <type1>LJ2</type1>
    <type2>LJ2</type2>
    <min>0.0</min>
    <max>0.85</max>
    <step>0.002</step>
    <inverse>
      <target>LJ2-LJ2.dist.tgt</target>
      <target_intra>LJ2-LJ2.dist-intra.tgt</target_intra>
      <do_potential>1</do_potential>
      <post_update />
      <post_add />
      <gromacs>
        <table>table_LJ2_LJ2.xvg</table>
      </gromacs>
      <post_add />
    </inverse>
    <improve_dist_near_core>
      <target>true</target>
      <new>true</new>
      <function>exponential</function>
      <fit_start_g>1e-05</fit_start_g>
      <fit_end_g>0.2</fit_end_g>
    </improve_dist_near_core>
  </non-bonded>

  <inverse>
    <!-- 85*0.00831451 gromacs units -->
    <kBT>0.70673335</kBT>
    <program>gromacs</program>
    <gromacs>
      <equi_time>20</equi_time>
      <table_bins>0.002</table_bins>
      <pot_max>1000000</pot_max>
      <table_end>1.95</table_end>
      <mdrun>gmx mdrun -table</mdrun>
    </gromacs>
    <filelist>grompp.mdp topol.top table.xvg index.ndx topology.xml</filelist>
    <iterations_max>10</iterations_max>
    <method>iie</method>
    <scriptpath />
    <log_file>inverse.log</log_file>
    <restart_file>restart_points.log</restart_file>
    <initial_guess>
      <method>table</method>
      <cut_off>0.85</cut_off>
    </initial_guess>
    <iie>
      <method>newton</method>
      <closure>hnc</closure>
      <topol>topology.xml</topol>
      <cut_off>0.85</cut_off>
      <tgt_dcdh>true</tgt_dcdh>
    </iie>
  </inverse>
</cg>
