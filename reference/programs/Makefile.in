SHELL=/bin/bash

.SUFFIXES: .t2t .tex
.PHONY: clean bootstrap

all: $(BINS)

%.t2t: 
	@if [ -z "${CSGSHARE}" ]; then \
	  echo CSGSHARE not defined >&2; \
	  exit 1; \
	fi
	@if ! which $* &> /dev/null; then\
	  echo $* not found;\
	  exit 1;\
	fi
	@if ! $* --help &> /dev/null; then\
	  echo $* --help failed;\
	  exit 1;\
	fi
	echo -e "\n\n\n==$*==" > $@
	@#$* --help | sed 's/^  --/: --/;/--/s/[[:space:]]\{5,\}/&\n/' >> $@
	$* --help | sed 's/^[[:space:]]*-/- -/' >> $@

.t2t.tex:
	./txt2tags -t tex --no-header --infile $< --outfile $@

#cleant2t:
#	rm -f *.t2t

clean: 
	rm -f $(DOCS)
	rm -f *.tex *~
	rm -f Makefile

bootstrap: Makefile.in
	@if [ -z "${CSGSHARE}" ]; then \
	  echo CSGSHARE not defined >&2; \
	  exit 1; \
	fi
	@if ! which csg_property > /dev/null 2>&1; then\
	  echo csg_property not found;\
	  exit 1;\
	fi
	ls `dirname \`which csg_property\``/csg_* | xargs -n1 basename | \
	  sed -e 's/.*/\t&.tex\\/' -e '1i BINS=\\' > Makefile
	echo >> Makefile
	cat Makefile.in >> Makefile
	
