<options>
	<ewald help="Evaluates site energies in a periodic setting" section="sec:ewald">
	<io_jobfile help="options to write a jobfile">
      <states help="states to write jobs for and which to parse from jobfile" default="n e h" />
      <segments help="segments to write jobs for and which to parse from jobfile" default="all"/>
    </io_jobfile>
		<job_file>job.xml</job_file>
		<map_file>system.xml</map_file>
		<multipoles>
			<mps_table>0</mps_table>
			<polar_bg></polar_bg>
			<pdb_check>true</pdb_check>
		</multipoles>
		<coulombmethod>
			<method>ewald</method>
			<cutoff>6.0</cutoff>
			<shape>xyslab</shape>
			<save_nblist>false</save_nblist>
			<dipole_corr>false</dipole_corr>
		</coulombmethod>
		<polarmethod>
			<method>thole</method>
			<induce>1</induce>
			<cutoff>3.0</cutoff>
			<wSOR_N>0.35</wSOR_N>
			<wSOR_C>0.30</wSOR_C>
			<aDamp>0.39</aDamp>
			<tolerance>0.001</tolerance>
			<radial_dielectric>4.0</radial_dielectric>
		</polarmethod>
		<tasks>
			<calculate_fields>true</calculate_fields>
			<polarize_fg>true</polarize_fg>
			<evaluate_energy>true</evaluate_energy>
			<apply_radial>false</apply_radial>
			<solve_poisson>false</solve_poisson>
			<scan_cutoff>false</scan_cutoff>
		</tasks>
		<coarsegrain>
			<cg_background>true</cg_background>
			<cg_foreground>false</cg_foreground>
			<cg_radius>-1</cg_radius>
			<cg_anisotropic>false</cg_anisotropic>
		</coarsegrain>
		<convergence>
			<energy>1e-5</energy>
			<kfactor>100</kfactor>
			<rfactor>6.0</rfactor>
		</convergence>
	</ewald>
</options>	
