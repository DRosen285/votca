<options>
        <ewdbgpol help="Calculates background polarisation needed for ewald calc" section="sec:ewdbgpol">
                <multipoles>system.xml</multipoles>
                <control>
                        <mps_table/>
                        <pdb_check>1</pdb_check>
                        <ptop_check>1</ptop_check>
                </control>
                <coulombmethod>
                        <method>ewald</method>
                        <cutoff>3.0</cutoff>
                        <shape>xyslab</shape>
                        <dipole_corr>false</dipole_corr>
                        <dipole_corr_type>system</dipole_corr_type>
                        <dipole_corr_direction>xyz</dipole_corr_direction>
                </coulombmethod>
                <polarmethod>
                        <method>thole</method>
                        <induce>1</induce>
                        <cutoff>0.0</cutoff>
                        <wSOR_N>0.35</wSOR_N>
                        <aDamp>0.390</aDamp>
                </polarmethod>
                <convergence>
                        <energy>1e-5</energy>
                        <kfactor>100</kfactor>
                        <rfactor>6.0</rfactor>
                </convergence>
        </ewdbgpol>
</options>
